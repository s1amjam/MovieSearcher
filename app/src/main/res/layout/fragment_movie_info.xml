<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_info_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="movie.MovieInfoFragment">

    <ImageView
        android:id="@+id/movie_info_poster_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/movie_info_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toStartOf="@+id/movie_info_runtime"
        app:layout_constraintStart_toEndOf="@+id/movie_info_poster_image_view"
        app:layout_constraintTop_toTopOf="@+id/movie_info_poster_image_view" />

    <TextView
        android:id="@+id/movie_info_genres"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/movie_info_title"
        app:layout_constraintTop_toBottomOf="@+id/movie_info_title" />

    <TextView
        android:id="@+id/movie_info_production_countries"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/movie_info_release_date"
        app:layout_constraintTop_toBottomOf="@+id/movie_info_genres" />

    <TextView
        android:id="@+id/movie_info_runtime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/movie_info_title" />

    <TextView
        android:id="@+id/movie_info_tagline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/movie_info_release_date"
        app:layout_constraintTop_toBottomOf="@+id/movie_info_release_date" />

    <TextView
        android:id="@+id/movie_info_release_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/movie_info_genres"
        app:layout_constraintTop_toBottomOf="@+id/movie_info_genres" />

    <TextView
        android:id="@+id/movie_info_overview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/movie_info_tagline"
        app:layout_constraintTop_toBottomOf="@+id/movie_info_tagline" />

    <Button
        android:id="@+id/menu_button_add_movie_to_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/add_to_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movie_info_overview" />

    <Button
        android:id="@+id/button_mark_movie_as_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/mark_as_favorite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_button_add_movie_to_list" />

    <Button
        android:id="@+id/button_watchlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/add_to_watchlist"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_mark_movie_as_favorite" />
</androidx.constraintlayout.widget.ConstraintLayout>