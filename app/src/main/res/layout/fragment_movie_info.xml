<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_details_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieInfoFragment">

    <ImageView
        android:id="@+id/movie_details_poster_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/movie_details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/movie_details_poster_image_view"
        app:layout_constraintTop_toTopOf="@+id/movie_details_poster_image_view" />

    <TextView
        android:id="@+id/movie_details_genres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/movie_details_title"
        app:layout_constraintTop_toBottomOf="@+id/movie_details_title" />

    <TextView
        android:id="@+id/movie_details_production_countries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/movie_details_release_date"
        app:layout_constraintTop_toBottomOf="@+id/movie_details_genres" />

    <TextView
        android:id="@+id/movie_details_runtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/movie_details_production_countries"
        app:layout_constraintTop_toBottomOf="@+id/movie_details_genres" />

    <TextView
        android:id="@+id/movie_details_tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/movie_details_release_date"
        app:layout_constraintTop_toBottomOf="@+id/movie_details_release_date" />

    <TextView
        android:id="@+id/movie_details_release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/movie_details_genres"
        app:layout_constraintTop_toBottomOf="@+id/movie_details_genres" />

    <TextView
        android:id="@+id/movie_details_overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="@+id/movie_details_tagline"
        app:layout_constraintTop_toBottomOf="@+id/movie_details_tagline" />
</androidx.constraintlayout.widget.ConstraintLayout>